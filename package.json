{
  "name": "taskforce-mailer",
  "version": "2.1.0",
  "description": "Advanced Email Analytics & AI Platform - Professional email intelligence and productivity platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter apps/desktop dev\" \"pnpm --filter @taskforce/analytics-api dev\" \"pnpm --filter @taskforce/ai-service dev\"",
    "build": "pnpm --filter @taskforce/shared-types build && pnpm --filter @taskforce/database generate && pnpm --filter @taskforce/analytics-api build && pnpm --filter @taskforce/ai-service build && pnpm --filter apps/desktop build",
    "test": "pnpm --filter @taskforce/analytics-api test && pnpm --filter @taskforce/ai-service test",
    "lint": "pnpm --filter @taskforce/analytics-api lint && pnpm --filter @taskforce/ai-service lint",
    "clean": "pnpm --filter @taskforce/shared-types clean && rm -rf node_modules/.cache",
    "db:migrate": "pnpm --filter @taskforce/database migrate",
    "db:seed": "pnpm --filter @taskforce/database seed",
    "db:studio": "pnpm --filter @taskforce/database studio",
    "health": "curl http://localhost:4000/health; curl http://localhost:4001/health",
    "desktop:dev": "pnpm --filter apps/desktop dev",
    "desktop:build": "pnpm --filter apps/desktop build",
    "desktop:dist": "pnpm --filter apps/desktop dist",
    "services:start": "pnpm --filter @taskforce/analytics-api start; pnpm --filter @taskforce/ai-service start",
    "services:dev": "pnpm --filter @taskforce/analytics-api dev; pnpm --filter @taskforce/ai-service dev"
  },
  "keywords": [
    "email-analytics",
    "ai-powered",
    "email-intelligence",
    "productivity",
    "enterprise",
    "email-management",
    "analytics",
    "artificial-intelligence",
    "taskforce",
    "mailer"
  ],
  "author": "Taskforce Mailer Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
